{
  "name": "ContribsToday",
  "version": "1.0",
  "description": "Chrome Extension that displays how many contributions you made today on Github.",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "options_page": "options.html",
  "background": {
    "scripts": ["GetContribs.js"],
    "persistent": false

  },
  "icons": {
    "16": "images/icon-2-16px.png",
    "32": "images/icon-2-32px.png",
    "48": "images/icon-2-48px.png",
    "128": "images/icon-2-128px.png"
  },
  "manifest_version": 2
}
